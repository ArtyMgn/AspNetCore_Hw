@model Student

<main>
    <dl>
        <dt>@Html.DisplayNameFor(m => m.Id)</dt>
        <dd>@Html.DisplayFor(m => m.Id)</dd>

        <dt>@Html.DisplayNameFor(m => m.Name)</dt>
        <dd>@Html.DisplayFor(m => m.Name)</dd>

        <dt>@Html.DisplayNameFor(m => m.Surname)</dt>
        <dd>@Html.DisplayFor(m => m.Surname)</dd>
        
        @if (!string.IsNullOrWhiteSpace(Model.Email))
        {
            <dt>@Html.DisplayNameFor(m => m.Email)</dt>
            <dd>@Html.DisplayFor(m => m.Email)</dd>
        }
        <br>
        <a class="btn btn-primary" href="@Url.Action("Edit", "Students", Model)">Редактировать</a>
    </dl>
</main>